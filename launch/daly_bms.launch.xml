<?xml version="1.0"?>
<launch>
  <arg name="port" default="$(env ROBOT_BMS_PORT /dev/ttyUSB_BMS)"/>
  <arg name="node_name" default="$(env NODE_NAME battery_monitor)"/>
  <arg name="robot_id" default="$(env ROBOT_ID robot)"/>

  <node pkg="daly_bms"
    exec="daly_bms_node.py"
    name="$(var node_name)"
    namespace="/$(var robot_id)"
    output="screen"
  >
    <param
      name="serial_port"
      value="$(var port)"
    />
  </node>
</launch>
